import cv2
import numpy as np

faceClassif = cv2.CascadeClassifier('imagenes de caras/haarcascade_frontalface_default.xml')
imagen= cv2.imread('imagenes de caras/campeones del mundo.png')


#Con scaleFactor=1.16 y los otros de base la escala va bien para la cara
faces= faceClassif.detectMultiScale(imagen,
    scaleFactor=1.1,
    minNeighbors=9,
    minSize=(20,20),
    maxSize=(200,200))

for (x,y,w,h) in faces:
    cv2.rectangle(imagen,(x,y),(x+w,y+h),(0,255,0),2)




cv2.imshow('Prueba de imagen', imagen)
cv2.waitKey(0)
cv2.destroyAllWindows()